pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = "wissal93/student-management:1.0"
        DOCKER_CMD = "/usr/bin/docker"
    }
    
    stages {
        stage('Test Docker Access') {
            steps {
                script {
                    echo "üîç Test d'acc√®s Docker..."
                    
                    // Tester avec le chemin complet
                    try {
                        sh "${DOCKER_CMD} --version"
                        echo "‚úÖ Docker accessible via ${DOCKER_CMD}"
                        env.DOCKER_AVAILABLE = "true"
                    } catch (Exception e) {
                        echo "‚ùå Docker non accessible: ${e.getMessage()}"
                        
                        // Essayer docker sans chemin
                        try {
                            sh "docker --version"
                            echo "‚úÖ Docker accessible via 'docker'"
                            env.DOCKER_AVAILABLE = "true"
                            env.DOCKER_CMD = "docker"
                        } catch (Exception e2) {
                            echo "‚ùå Docker non accessible du tout"
                            env.DOCKER_AVAILABLE = "false"
                        }
                    }
                    
                    if (env.DOCKER_AVAILABLE == "false") {
                        error "Docker n'est pas accessible. Ex√©cutez: sudo usermod -aG docker jenkins && sudo systemctl restart jenkins"
                    }
                }
            }
        }
        
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/WissalMonastiri/student-management.git'
            }
        }
        
        stage('Build Maven') {
            steps {
                dir('student-management') {
                    sh '''
                        chmod +x mvnw
                        ./mvnw clean package -DskipTests
                        echo "‚úÖ Build Maven r√©ussi"
                    '''
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                dir('student-management') {
                    script {
                        echo "üê≥ Construction de l'image Docker avec ${DOCKER_CMD}..."
                        
                        sh """
                            # V√©rifier le Dockerfile
                            cat Dockerfile
                            
                            # Construire l'image
                            ${DOCKER_CMD} build -t ${DOCKER_IMAGE} .
                            
                            # V√©rifier
                            echo "‚úÖ Image cr√©√©e:"
                            ${DOCKER_CMD} images | grep wissal93/student-management
                        """
                    }
                }
            }
        }
        
        stage('Push to Docker Hub') {
            steps {
                script {
                    withCredentials([usernamePassword(
                        credentialsId: 'dockerhub-credentials',
                        usernameVariable: 'USERNAME',
                        passwordVariable: 'PASSWORD'
                    )]) {
                        sh """
                            # Login
                            echo \$PASSWORD | ${DOCKER_CMD} login -u \$USERNAME --password-stdin
                            
                            # Push
                            ${DOCKER_CMD} push ${DOCKER_IMAGE}
                            
                            # Logout
                            ${DOCKER_CMD} logout
                            
                            echo "‚úÖ Image pouss√©e sur Docker Hub!"
                        """
                    }
                }
            }
        }
    }
    
    post {
        success {
            echo "üéâ Pipeline r√©ussie! Image: ${DOCKER_IMAGE}"
        }
        failure {
            echo "‚ùå Pipeline √©chou√©e"
        }
    }
}
