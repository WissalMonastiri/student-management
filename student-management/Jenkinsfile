pipeline {

    agent {
        node {
            label 'build'
        }
    }

    tools {
        maven 'M2_HOME'
    }

   options {
    timeout(time: 5, unit: 'MINUTES')
    }

    environment {
        APP_ENV = "DEV"
    }

    stages {

        stage('Code Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/WissalMonastiri/student-management.git'
            }
        }

        stage('Code Build') {
    steps {
        sh 'mvn install -Dmaven.test.skip=true -Dmaven.repo.local=/var/jenkins_home/.m2'
    }
}


    post {
        always {
            echo "====== always ======"
        }
        success {
            echo "===== pipeline executed successfully ====="
        }
        failure {
            echo "====== pipeline execution failed ======"
        }
    }
}


