pipeline {
    agent any

    tools {
        maven 'M2_HOME'
    }

    stages {
        stage('Checkout') {
            steps {
                git(branch: 'main', url: 'https://github.com/WissalMonastiri/student-management.git')
            }
        }

        stage('Build') {
            steps {
                dir('student-management') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }
    }

    post {
        success {
            echo 'BUILD SUCCESS ğŸ‰'
        }
        failure {
            echo 'BUILD FAILED âŒ'
        }
    }
}
