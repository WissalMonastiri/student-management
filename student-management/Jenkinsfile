pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "tonDockerHubUsername/student-management:1.0"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/WissalMonastiri/student-management.git'
            }
        }

        stage('Verify Files') {
            steps {
                dir('student-management') {
                    // Vérifier que pom.xml et Dockerfile sont là
                    sh 'ls -l'
                }
            }
        }

        stage('Build Maven') {
            steps {
                dir('student-management') {
                    // Utiliser le wrapper Maven pour compiler le projet
                    sh './mvnw clean package -DskipTests'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('student-management') {
                    script {
                        docker.build("${env.DOCKER_IMAGE}")
                    }
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-credentials') {
                        docker.image("${env.DOCKER_IMAGE}").push()
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline terminée avec succès ✅'
        }
        failure {
            echo 'La pipeline a échoué ❌'
        }
    }
}
