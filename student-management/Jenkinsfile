pipeline {
    agent any
    environment {
        DOCKER_IMAGE = "wissal93/student-management:1.0"
    }
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/WissalMonastiri/student-management.git'
            }
        }
        stage('Build Maven') {
            steps {
                dir('student-management') { // Assure-toi de pointer sur le bon sous-dossier
                    sh './mvnw clean package -DskipTests'
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${DOCKER_IMAGE} ."
            }
        }
        stage('Push Docker Image') {
            steps {
                sh "docker push ${DOCKER_IMAGE}"
            }
        }
    }
    post {
        failure {
