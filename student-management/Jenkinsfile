pipeline {
    agent any

    environment {
        // Nom complet de l'image Docker
        DOCKER_IMAGE = "tonDockerHubUsername/student-management:1.0"
    }

    stages {
        stage('Checkout Code') {
            steps {
                // Récupération du code depuis GitHub
                git branch: 'main',
                    url: 'https://github.com/WissalMonastiri/student-management.git'
            }
        }

        stage('Build Maven') {
            steps {
                // Compilation de l'application Java avec Maven
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Construction de l'image Docker à partir du Dockerfile
                    docker.build("${env.DOCKER_IMAGE}")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    // Connexion à Docker Hub et push de l'image
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-credentials') {
                        docker.image("${env.DOCKER_IMAGE}").push()
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline terminée avec succès ✅'
        }
        failure {
            echo 'La pipeline a échoué ❌'
        }
    }
}
