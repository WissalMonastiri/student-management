pipeline {
    agent any

    environment {
        IMAGE_NAME = "wissal93/student-management"
        IMAGE_TAG  = "1.0"
    }

    stages {

      stage('Checkout Code') {
    steps {
        git branch: 'main',
            url: 'https://github.com/WissalMonastiri/student-management.git'
    }
}

        stage('Build Maven') {
            steps {
                dir('student-management') {
                    sh '''
                        chmod +x mvnw
                        ./mvnw clean package -DskipTests
                        echo "âœ… Build Maven terminÃ©"
                    '''
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('student-management') {
                    sh '''
                        echo "ğŸ³ Docker build..."
                        docker build -t ${IMAGE_NAME}:${IMAGE_TAG} .
                    '''
                }
            }
        }

     stage('Push Docker Image') {
    steps {
        script {
            docker.withRegistry('https://index.docker.io/v1/','dockerhub-credentials') {
                docker.image("${env.DOCKER_IMAGE}").push()
            }
        }
    }
}

    post {
        success {
            echo 'ğŸ‰ Pipeline terminÃ©e avec succÃ¨s'
            archiveArtifacts artifacts: 'student-management/target/*.jar', fingerprint: true
        }
        failure {
            echo 'âŒ La pipeline a Ã©chouÃ©'
        }
    }
}



